@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h2>Giriş Formu</h2>
                        @ViewBag.Mesaj
                        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input name="userName" type="text" placeholder="Kullanıcı Adı" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input name="password" type="password" placeholder="Kullanıcı Şifresi" class="form-control" />
                            </div>
                            <input type="submit" value="Login" class="btn btn-primary" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

